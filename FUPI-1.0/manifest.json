{
  "manifest_version": 3,
  "name": "fucking-useless-plug-in",
  "version": "1.0.0",
  "description": "无用插件",
  "author": "Fa&Yao",
  "icons": {
    "16": "img/16icon.png",
    "48": "img/48icon.png",
    "128": "img/128icon.png"
  },
  "action": {
    "default_icon": "img/16icon.png",
    "default_title": "fucking-useless-plug-in",
    "default_popup": "html/action.html"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "js": [
        "js/content_script.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "notifications",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}